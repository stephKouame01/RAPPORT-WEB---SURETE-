<script>
    // Horloge en temps r√©el
    function updateDateTime() {
        const now = new Date();
        const date = now.toLocaleDateString("fr-FR", { 
            weekday: 'long', 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
        });
        const time = now.toLocaleTimeString("fr-FR");
        document.getElementById("dateTimeDisplay").innerText = `üìÖ ${date} ‚è∞ ${time}`;
    }
    setInterval(updateDateTime, 1000);
    updateDateTime();
</script>

